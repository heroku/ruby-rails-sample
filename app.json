{
  "name": "Ruby on Rails",
  "description": "A template for getting started with the popular Ruby framework.",
  "website": "http://rubyonrails.org",
  "repository": "https://github.com/heroku/ruby-rails-sample",
  "logo": "https://upload.wikimedia.org/wikipedia/commons/c/c3/Ruby_on_Rails_logo.svg",
  "scripts": {
    "postdeploy": "echo HEROKU_APP_NAME=$HEROKU_APP_NAME; echo HEROKU_PARENT_APP_NAME=$HEROKU_PARENT_APP_NAME; bundle exec rake db:migrate"
  },
  "env": {
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "RAILS_ENV": {
      "description": "Rails environment",
      "value": "production"
    },
    "RACK_ENV": {
      "description": "Rack environment",
      "value": "production"
    },
    "RAILS_SERVE_STATIC_FILES": {
      "description": "Serve static files?",
      "value": "true"
    }
  },
  "addons": ["heroku-postgresql"]
}
